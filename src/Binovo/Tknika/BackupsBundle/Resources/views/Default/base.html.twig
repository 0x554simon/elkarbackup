<!DOCTYPE html>
{% trans_default_domain 'BinovoTknikaBackups' %}
<html>
    <head>
        <title>{% block title %}Backup server{% endblock %}</title>
        <!-- Bootstrap -->
        {% stylesheets '@BinovoTknikaBackupsBundle/Resources/public/css/bootstrap.min.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" media="screen" />
        {% endstylesheets %}
        <link rel="stylesheet" href="{{ asset('js/dojo-release-1.8.1/dijit/themes/claro/claro.css') }}" media="screen" />

        {% block scripts %}
        <script type="text/javascript" src="{{ asset('js/dojo-release-1.8.1/dojo/dojo.js') }}" data-dojo-config="async: true, parseOnLoad: true"></script>

        <script type="text/javascript">
            require(["dojo", "dojo/parser", "dijit/form/Button", "dijit/MenuBar", "dijit/MenuBarItem", "dijit/PopupMenuBarItem", "dijit/DropDownMenu", "dijit/MenuItem", "dojo/NodeList-manipulate"]);
        </script>
        {% endblock %}

    </head>
    <body class="claro">
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
{% block header %}
{% endblock %}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
{% block menu %}
{{ knp_menu_render('BinovoTknikaBackupsBundle:Builder:mainMenu') }}
{% endblock %}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
{% block body %}
{% endblock %}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
{% block footer %}
{% endblock %}
                </div>
            </div>
        </div>
    </body>
</html>
